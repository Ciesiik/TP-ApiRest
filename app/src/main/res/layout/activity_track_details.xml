<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.track.TrackDetailsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/primary_toolbar">
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >

            <TextView
                android:id="@+id/tvTrackTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="@string/textView"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:textAlignment="center"/>

            <LinearLayout
                android:id="@+id/contenedorAlbum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/imgAlbumCover"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    >

                    <TextView
                        android:id="@+id/tvAlbumTitulo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/textView"
                        android:textSize="18sp"
                        android:paddingStart="4dp"
                        android:paddingTop="3dp"
                        android:background="@drawable/bg_tv"/>

                    <TextView
                        android:id="@+id/tvTrackNumero"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:text="@string/textView"
                        android:textSize="14sp"
                        android:background="@drawable/bg_tv"
                        android:gravity="center"/>
                </LinearLayout>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/tvDuracion"
                android:text="@string/textView"
                android:layout_marginTop="12dp"
                android:paddingStart="4dp"
                android:paddingTop="3dp"
                android:background="@drawable/bg_tv"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/tvFecha"
                android:text="@string/textView"
                android:paddingStart="4dp"
                android:paddingTop="3dp"
                android:background="@drawable/bg_tv"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/tvGanancia"
                android:text="@string/textView"
                android:paddingStart="4dp"
                android:paddingTop="3dp"
                android:background="@drawable/bg_tv"/>

            <TextView
                android:id="@+id/tvRank"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/textView"
                android:paddingStart="4dp"
                android:paddingTop="3dp"
                android:background="@drawable/bg_tv"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mas_sobre"
                android:textSize="13sp"
                android:layout_marginTop="20dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/contenedorArtista"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_tv"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgFotoArtista"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/items" />

                <TextView
                    android:id="@+id/tvNombreArtista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textView"
                    android:textSize="18sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ibPlayPause"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@drawable/item_background"
            android:src="@drawable/play"/>

        <ImageButton
            android:id="@+id/ibFavorito"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@drawable/item_background"
            android:src="@drawable/no_favorito">

        </ImageButton>

    </LinearLayout>

</LinearLayout>

